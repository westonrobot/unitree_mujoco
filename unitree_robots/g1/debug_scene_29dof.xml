<mujoco model="g1_29dof scene">
  <include file="g1_29dof.xml"/>

  <statistic center="0 0 0.5" extent="2.0"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    <material name="strap" rgba="0.6 0.2 0.2 1" reflectance="0.1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
  
    <!-- Ceiling attachment point - easy to add/remove -->
    <body name="ceiling_attachment" pos="0 0 1.5" quat="0 0 0.7068252 0.7068252" >
      <geom name="ceiling_mount" type="cylinder" size="0.01 0.1" rgba="0.3 0.3 0.3 1"/>
      <site name="strap_left" pos="0 0 0.1" size="0.01"/>
      <site name="strap_right" pos="0 0 -0.1" size="0.01"/>
    </body>
  </worldbody>

  <!-- Create shoulder strap -->
  <tendon>
    <spatial name="left_strap" limited="true" range="0.2 0.3" damping="0.5" stiffness="10000" width="0.01" rgba="0.6 0.2 0.2 1" material="strap">
      <site site="strap_left"/>
      <site site="left_attach_point"/>
    </spatial>
  </tendon>

  <tendon>
    <spatial name="right_strap" limited="true" range="0.2 0.3" damping="0.5" stiffness="10000" width="0.01" rgba="0.6 0.2 0.2 1" material="strap">
      <site site="strap_right"/>
      <site site="right_attach_point"/>
    </spatial>
  </tendon>
  
  <!-- Set up lifting force with constant bias -->
  <actuator>
    <general name="left_strap_force" site="left_attach_point" refsite="strap_left" 
             ctrlrange="0 100" gainprm="1000" biasprm="800" forcerange="0 1000" 
             dynprm="0.5" dyntype="filter" gaintype="fixed"/>
    <general name="right_strap_force" site="right_attach_point" refsite="strap_right" 
             ctrlrange="0 100" gainprm="1000" biasprm="800" forcerange="0 1000" 
             dynprm="0.5" dyntype="filter" gaintype="fixed"/>
  </actuator>
</mujoco>
